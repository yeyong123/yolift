<% provide(:title, @item.title) %>
<div class="edge-position">
	<%= render 'home/nav_list' %>
	<div class="hr-postion">
	</div>
	<div class="edge-from">
		<ul>
			<% Item.all.each do |item| %>
				<li><%= link_to item.title, item_path(item.id) %></li>
			<% end %>
			</ul>
		</div>
	</div>
<div class="product-index">
	<div class="about-title">
		<h4><%= @item.title %></h4>
		<div class="breadcrumb">
			<%= render_navigation(renderer: :breadcrumbs, join_with: '&nbsp / &nbsp') %>
		</div>
	</div>
	<div class="about-content">
		<table class="table">
			<% @item.cases.each do |ca| %>
				<tr>
					<td><%= image_tag(ca.image_url(:small))%></td>
					<td><%= link_to ca.title, case_path(ca.id) %></td>
					<% if admin_signed_in? %>
						<td><%= link_to "编辑", edit_case_path(ca) %></td>
						<td><%= link_to "删除", ca, method: :delete, confirm: "确认删除" %></td>
					<% end %>
			</tr>
			<% end %>
		</table>
		<% if admin_signed_in? %>
		<%= link_to "增加案例", new_case_path, class: "btn btn-primary" %>
	<% end %>
	</div>
</div>
