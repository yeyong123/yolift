<% provide(:title, @list.title) %>
<div class="edge-position">
	<%= render 'home/nav_list' %>
	<div class="hr-postion">
	</div>
	<div class="edge-from">
		<ul>
			<% List.all.each do |list| %>
				<li><%= link_to list.title, list_path(list.id) %></li>
			<% end %>
		</ul>
	</div>
</div>
<div class="product-index">
	<div class="about-image">
		<% List.all.each do |list| %>
			<%= image_tag(list.image_url(:navshow)) if list.image? %>
		<% end %>
		</div>

	<div class="about-title">
			<h4><%= @list.title %></h4>
		<div class="breadcrumb">
			<%= render_navigation(renderer: :breadcrumbs, join_with: '&nbsp / &nbsp') %>
		</div>
	</div>
	<div class="about-content">
		<table class="table">
			<% @list.guides.each do |guide| %>
				<tr>
					<td><%= link_to guide.title, guide_path(guide) %></td>
					<% if admin_signed_in? %>
					<td><%= link_to "编辑", edit_guide_path(guide) %></td>
					<td><%= link_to "删除", guide, method: :delete, confirm: "确认删除" %>
					<% end %>
				</tr>
			<% end %>
		</table>
		<% if admin_signed_in? %>
			<%= link_to "新增分类指南", new_guide_path, class: "btn btn-primary" %>
		<% end %>
		</div>

</div>
