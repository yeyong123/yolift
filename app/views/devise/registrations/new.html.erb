<%= render 'home/nav_list' %>
<div class="sign-interface">

<h2>简单注册</h2>
<div class="sign-in">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="sign-input"><%= f.label :email, "邮箱:" %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="sign-input"><%= f.label :password, "密码:" %>
  <%= f.password_field :password %></div>

  <div class="sign-input"><%= f.label :password_confirmation, "确认密码:" %>
  <%= f.password_field :password_confirmation %></div>

  <div class="button-btn"><%= f.submit "提交注册", class: "btn btn-primary btn-success" %></div>
<% end %>
</div>
<%= render "devise/shared/links" %>
</div>
