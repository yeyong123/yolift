<% provide(:title, "产品分类") %>
<%= render 'home/nav_list' %>
<div class="product-index">
<div class="category">
	<table class="table">
		<% @categories.each do |cate| %>
			<tr>
				<td><%= cate.name %></td>
				<td><%= link_to "查看", category_path(cate) %></td>
				<td><%= link_to "编辑", edit_category_path(cate) %></td>
				<td><%= link_to "删除", cate, method: :delete, confirm: "Are you sure?" %></td>
			</tr>
		<% end %>
	</table>
</div>
</div>
