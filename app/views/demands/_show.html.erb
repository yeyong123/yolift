<div class="product-index">
	<table class="table">
		<tr>
			<td>序号:<%= @demand.id %></td>
				<td>姓名:<%= @demand.name %></td>
				<td>公司:<%= @demand.company %></td>
				<td>手机:<%= @demand.phone %></td>
				<td>电话:<%= @demand.telphone %></td>
				<td>邮箱:<%= @demand.email %></td>
				<td>
					<% if !@demand.deal? %>
						<%= form_for [:admin,@demand] do |f| %>
							<%= check_box_tag('demand[deal]',1, @demand.id) %>
							<%= f.submit "处理", class: "btn btn-mini btn-primary" %>
						<% end %>
					<% else %>
						<span class="deal-color">已处理</span>
					<% end %>
				</td>
				<tr>
					<td colspan="8">需求:   <%= @demand.question %></td>
				</tr>
			</tr>
			
	</table>
</div>
