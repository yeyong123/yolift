<%= render 'home/nav_list' %>
<div class="product-index">
	<table class="table">
			<%@demands.each do |demand| %>
		<tr>
			<td><%= demand.id %></td>
				<td><%= demand.name %></td>
				<td><%= demand.company %></td>
				<td><%= demand.phone %></td>
				<td><%= demand.telphone %></td>
				<td><%= demand.email %></td>
				<td><%= demand.question %></td>
				<td>
					<% if !demand.deal? %>
						<%= form_for demand do |f| %>
							<%= check_box_tag('demand[deal]',1, demand.id) %>
							<%= f.submit "处理", class: "btn btn-mini btn-primary" %>
						<% end %>
					<% else %>
						<span class="deal-color">已处理</span>
					<% end %>
				</td>
				<tr>
					<td colspan="8"><%= demand.question %></td>
				</tr>
			</tr>
			
				<% end %>
	</table>
</div>
