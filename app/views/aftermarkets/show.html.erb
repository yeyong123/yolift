<% provide(:title, @aftermarket.title) %>
<div class="edge-position">
	<%= render 'home/nav_list' %>
	<div class="hr-postion">
	</div>
	<div class="edge-from">
		<ul>
			<% Aftermarket.all.each do |after| %>
				<li><%= link_to after.title, aftermarket_path(after.id) %></li>
			<% end %>
			</ul>
		</div>
	</div>
	<div class="product-index">
		<div class="about-title">
			<h4><%= @aftermarket.title %></h4>
			<div class="breadcrumb">
				<%= render_navigation(renderer: :breadcrumbs, join_with: '&nbsp /&nbsp') %>
			</div>
		</div>
		<div class="about-content">
			<%= raw @aftermarket.content %>
			<% if @aftermarket.id == 2 %>
				<div class="contact-join">
					<%= render 'repairs/form' %>
				</div>
			<% end %>
		</div>
		<div class="zixun-page">
			<span class="page-one">上一篇
				<%= link_to @aftermarket.previous.title, aftermarket_path(@aftermarket.previous.id) unless @aftermarket.previous.nil? %>
			</span>
			<span class="page-two">下一篇
				<%= link_to @aftermarket.next.title, aftermarket_path(@aftermarket.next.id) unless @aftermarket.next.nil? %>
			</span>
		</div>
	</div>
