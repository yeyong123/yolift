<div class="mobile-product tag-products">
<div id="mobile_products">
<%= render partial: 'mobile_index' %>
</div>
<% unless @products.total_pages < 2 %>
	<% unless params[:t] %>
		<%= link_to products_path(page: @products.current_page + 1), remote: true, id: "show_more" do %>
			<li><span>加载更多...</span></li>
		<% end %>
	<% else %>
		<%= link_to products_path(t: params[:t], page: @products.current_page + 1), remote: true, id: "show_more" do %>
			<li><span>加载更多...</span></li>
		<% end %>
	<% end %>
<% end %>
</div>
