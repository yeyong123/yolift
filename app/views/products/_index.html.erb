<li class="span3">
<div class="thumbnail">
	<div class="product-image">
		<%= link_to product_path(product) do%>
			<%= image_tag(product.image_url(:narmail)) if product.image? %>
		<% end %>
		</div>
	<h6><%= product.title %></h6>
	<div class="product-outline">
		<%= sanitize(product.outline) %>
	</div>
	<div class="link-product2">
	<% if admin_signed_in? %>
		<div class="btnlink">
			<%= link_to "删除", product, method: :delete, confirm: "确认删除", class: "btn btn-danger" %>
		</div>
	<% else %>
		<%= link_to "更多详情 >>", product_path(product.id) %>
	<% end %>
	</div>
</div>
</li>

