<li class="span3">
<div class="thumbnail">
	<div class="product-image">
		<%= link_to image_tag(product.photos.first.image_url(:narmail)), product %>
		<h6><%= product.title %></h6>
	</div>
	<div class="product-outline">
		<%= sanitize(product.outline) %>
	</div>
	<p class="link-product">
	<%= link_to "更多详情 >>", product_path(product.id) %>
	</p>
</div>
</li>

