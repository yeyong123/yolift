<div class="product-description">
	<div class="product-title">
		<span><%= @product.title %></span>
	</div>
	<div class="product-text">
			<%= sanitize @product.listtext %>
	</div>
	<div class="product-item">
		<ul>
			<li><a target= "_blank" href="http://qiao.baidu.com/?module=default&controller=webim&action=index&siteid=630868&groupid=0&groupname=%E5%9C%A8%E7%BA%BF%E5%92%A8%E8%AF%A2"><img src="/assets/product/zixun.png"/></a></li>
			<li> <a href="<%= @product.printpdf %>" target="_blank"><img src="/assets/product/print.png"/></a></li>
			<li class="drop-list"> <a> <img src="/assets/product/commit.png"/></a></li>
			<ul class="drop-list-toggle">
				<span>选择货号:</span>
				<%= form_for([@product,@line_item]) do |f| %>
					<% @productnumbers.each do |ph| %>
						<li><%= radio_button_tag 'line_item[productnumber_ids][]', ph.id, @line_item.productnumbers.map(&:id).include?(ph.id) %>
						<%= ph.number %>	
						</li> 
					<% end %>
					<p class="error">请选择一个产品货号</p>
					<%= hidden_field_tag 'line_item[productnumber_ids][]', '' %>
					<%= f.hidden_field :cart_id, value: @cart.id %>
					<%= f.submit "加入购物车", class: "btn btn-success" %>
				<% end %>
			</ul>
			<li><a href="#" onclick="addfavorite()"><img src="/assets/product/4.png"/></a></li>
		</ul>
			</div>
		</div>
	<div class="product-phone">
				</div>



