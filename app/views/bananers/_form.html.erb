<%= form_for @bananer, html: { multipart: true} do |f| %>
	<div class="field">
		<%= f.label :title, "主题" %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :descript, "简介描述" %>
		<%= f.text_field :descript %>
	</div>
	<div class="field">
		<%= f.label :button,"链接地址" %>
		<%= f.text_field :button %>
	</div>
	<div class="field"%>
		<%= f.label :image,"导航图" %>
		<%=image_tag(@bananer.image_url(:thumb)) if @bananer.image? %>
		<%= f.file_field :image %>
	</div>
	<div class="action" style="float:right; margin: 0 200px 10px 0">
		<%= f.submit "上传图片", class: "btn btn-primary btn-success"%>
		<%= link_to "返回", bananers_path, class: "btn btn-primary" %>
	</div>
<% end %>
