	<div id="myCarousel" class="carousel slide">
			<ol class="carousel-indicators">
				<% ProductImage.limit(4).each_with_index do |bananer,index| %>
					<li data-target="#myCarousel" data-slide-to='<%= index %>'></li>
				<% end %>
			</ol>
			<div class="carousel-inner">
				<% ProductImage.limit(4).each do |bananer| %>
					<div class="item">
						<%= link_to image_tag(bananer.image_url), bananer.url %>
					</div>	
				<% end %>
			</div>
		</div>

