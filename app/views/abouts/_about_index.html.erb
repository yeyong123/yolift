<div class="product-index">
	<%= form_for [:admin,@about_index] do |f| %>
		<%= render 'home/error_message', object: f.object %>
		<div class="field">
			<%= f.label "首页展示的图片" %>
			<%= f.file_field :image %>
		</div>
		<div class="field">
			<%= f.label "简介"  %>
			<%= f.kindeditor :info, width: 900, height: 300 %>
		</div>
		<div class="action">
			<%= f.submit "保存", class: "btn btn-primary" %>
			<%= link_to "返回", :back, class: "btn btn-success" %>
		</div>
	<% end %>
</div>
