<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Yolift</title>
		<!--<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/assets/responsive/bootstrap-responsive.min.css" rel="stylesheet">-->
		<%= stylesheet_link_tag  "bootstrap/bootstrap.min","customer/customer","customer/test" %>
		<%= javascript_include_tag "application", "js/bootstrap.min", "js/customer" %>
		<%= csrf_meta_tags %>
		<%= render 'layouts/shim' %>	
	</head>
	<body>
		<%= render 'layouts/temple' %>
		<div class="flash-notice">
			<p class="notice alert"><%= notice %> <%= alert %></p>
						</div>
		<div class="container">
			<%= yield %>
		</div>
		<script>
			$(document).ready(function(){
				if(($('.flash-notice').length < 1)){
					$('.flash-notice').hide();
				}
			});
			</script>

			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
	</body>
	<%= render 'layouts/javascript_shim' %>	
	 </html>
