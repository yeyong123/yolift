<script>
function addfavorite() 
{ 
if (document.all) 
{ 
window.external.addFavorite('http://www.domain.com','名字'); 
} 
else if (window.sidebar) 
{ 
window.sidebar.addPanel('名字', 'www.domain.com', ""); 
} 
} 
</script><a href="#" onclick="addfavorite()">加入收藏</a>
