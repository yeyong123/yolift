	<%= form_for product, remote: true do |f| %>
		<%= render 'home/error_message', object: f.object %>
		<% if !product.paixu? %>
			<%= f.number_field :paixu %>
			<%= f.submit "设定", class: "btn  btn-success" %>
		<% else %>
			<%= f.number_field :paixu %>
			<%= f.submit "更改", class: "btn btn-danger" %>
		<% end %>
	<% end %>

