<div class="mobile-form">
<%= form_for @catelog do |f| %>
	<% if @catelog.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			<h4>表单有<%= @catelog.errors.count%>个错误！</h4>
			<ul>
				<% @catelog.errors.full_messages.each do |msg| %>
					<li><%= msg %> </li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>
	<div class="mobile-form1">
		<div class="field">
			<%= f.label :company, "公司名称:" %>
			<%= f.text_field :company %>
<span class="no-null">*(必填)</span>

			<br />
		</div>
		<div class="field">
			<%= f.label :name, "姓名:" %>
			<%= f.text_field :name%>
			<span class="no-null">*(必填)</span>
				</div>

		<div class="field">
			<%= f.label :address, "地址:" %>
			<div class="field-address">
				<%= collection_select(:catelog, :province_id, Province.all, :id, :name) %>
				<br/>
				<%= grouped_collection_select(:catelog, :city_id, Province.all, :cities, :id, :id, :name) %>
				<br/>
				<%= grouped_collection_select(:catelog, :district_id, City.all, :districts, :id, :id, :name) %>
			</div>
		</div>
		<div class="field">
			<%= f.label :address, "详细地址:" %>
			<%= f.text_field :address %>
		</div>
		<div class="field">
			<%= f.label :zip, "邮编:" %>
			<%= f.text_field :zip %>
		</div>
		<div class="field">
			<%= f.label :mobel, "手机:" %>
			<%= f.text_field :mobel %>
	<span class="no-null">*(必填)</span>

		</div>
		<div class="field">
			<%= f.label :phone, "电话:" %>
			<%= f.text_field :phone %>
		</div>
		<div class="field">
			<%= f.label :email, "邮箱:" %>
			<%= f.email_field :email %>
		</div>
		<div class="field">
			<%= f.label :scale, "公司规模:" %>
			<%= f.select :scale, Catelog::Scale, prompt: "选择公司规模" %>
		</div>
		<div class="field">
			<%= f.label :number, "索取数量" %>
			<%= f.number_field :number,min: 1, max: 5 %>
		</div>
		<div class="field">
			<%= f.label :interest, "感兴趣产品" %>
			<%= f.text_field :interest %>
	</div>
	<div class="action">
	<%= link_to "首页", products_path, class: "btn btn-info"%>
			<%= f.submit "提交申请", class: "btn btn-primary" %>
	</div>
		</div>
	 <% end %>
</div>

