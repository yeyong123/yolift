<div class="product-index">
	<div class="about-title">
		<h4>客户订单详细</h4>
	</div>
	<table class="table">
		<tr>
			<td>订单号：</td>
			<td><%= @order.ordernumber %></td>
			<td>订单产品总数量:</td>
			<td colspan="3"><%= order_sum(@order) %></td>
			<td>
				<% if !@order.deal? %>
				<%= form_for @order do |f| %>
					<%= check_box_tag('order[deal]', 1, @order.id) %>
					<%= f.submit "处理", confirm: "确认办理", class: "btn btn-primary" %>
				<% end %>
				<% else %>
					<span class="deal-color">已处理</span>
				<% end %>
			</td>

	</tr>
<% @order.line_items.each do |line| %>
	<tr>
		<td>产品名称：</td>
	<td><%= line.product.title %></td>
<td>物料号：</td>
	<td>
			<% line.productnumbers.each do |ph| %>
			<%= ph.number %>
		<% end %>
	</td>
	<td>产品数量：</td>
	<td><%= line.quantity %></td>
</tr>
<% end %>
<tr>
<td>联系人：</td>
<td><%= @order.name %></td>
<td>电话：</td>
<td><%= @order.phone %></td>
<td>邮箱：</td>
<td><%= @order.email %></td>
</tr>
<tr>
	<td>收货地址：</td>
	<td colspan="5">
		<%= @order.province.name %>
		<%= @order.city.name %>
		<%= @order.district.name %>
		<%= @order.address %>
	</td>
</tr>
<tr>
	<td colspan="6">备注内容:</td>
</tr>
<tr>
	<td colspan="7"><%= @order.content %></td>
</tr>
</table>
</div>
